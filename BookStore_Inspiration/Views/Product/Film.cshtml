
@using BookStore.Data
@model BookStore_Inspiration.Controllers.AllProductIndex

@{
    ViewData["Title"] = "Филми";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var userName = @User.Identity.Name;

}
<h1>Филми</h1>

