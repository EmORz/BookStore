
@model BookStore_Inspiration.ViewModels.User.Index.CollectionOfUsers
@{
    ViewData["Title"] = "Списък с потребители";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="mobile-fondsize-20 text-muted text-center">@ViewData["Title"]</h3>
<hr class="w-50" />
<div id="users" class="mt-3">
@{
    var users = Model.Users;
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Id</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">FirstName</th>
            <th scope="col">LastName</th>
            <th scope="col">Phonenumber</th>
            <th scope="col">UCN</th>
            <th scope="col">Delete</th>
            <th scope="col">Receipts</th>

        </tr>
    </thead>
    @for (int i = 0; i < users.Count; i++)
    {
        <tbody>
            <tr>
                <th scope="row">@i</th>
                <td>@users[i].Id</td>
                <td>@users[i].UserName</td>
                <td>@users[i].Email</td>
                <td>@users[i].FirstName</td>
                <td>@users[i].Lastname</td>
                <td>@users[i].Phonenumber</td>
                <td>@users[i].UCN</td>

                @{
                    var text = "Delete User";
                }
                <td>

                    <span class="table-remove">
                        <button type="button"
                                class="btn btn-default btn-rounded btn-sm my-0 mobile-fondsize-20">
                            @Html.ActionLink(text, "Delete", "Users", new { id = users[i].Id })
                        </button>
                    </span>
                  
                </td>
                <td>
                    
                    <span class="table-remove">
                        <button type="button"
                                class="btn btn-default btn-rounded btn-sm my-0 mobile-fondsize-20">
                            @Html.ActionLink("Receipts", "ReceiptsClientA", "Info", new { id = users[i].Id })
                        </button>
                    </span>

                </td>
         



            </tr>
        </tbody>
    }
</table >



    </div>
