@model BookStore_Inspiration.ViewModels.Genre.EditGenreViewModel

@{
    ViewData["Title"] = "Промени Жанра";
}

<h3 class="mobile-fondsize-20 text-muted text-center">@ViewData["Title"]</h3>
<hr class="w-50" />
<div class="container">
    <form asp-controller="Genre" asp-action="Edit" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Id" class="form-control" hidden/>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    
        <div class="form-group text-center">
            <button type="submit" value="" class="btn btn-primary">Промени</button>
        </div>
    </form>
</div>