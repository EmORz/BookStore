@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center mt-3">Регистрация</h1>
<hr class="mt-3" />
<div class="d-flex justify-content-center">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group" align="center">

            <label asp-for="Input.Username" class="font-weight-bold"></label>
            <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username ..." />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">

            <label asp-for="Input.Firstname" class="font-weight-bold"></label>
            <input asp-for="Input.Firstname" class="form-control" type="text" placeholder="Firstname ..." />
            <span asp-validation-for="Input.Firstname" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">

            <label asp-for="Input.Lastname" class="font-weight-bold"></label>
            <input asp-for="Input.Lastname" class="form-control" type="text" placeholder="Lastname ..." />
            <span asp-validation-for="Input.Lastname" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" type="email" placeholder="Email ..." />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password ..." />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm password ..." />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group" align="center">

            <label asp-for="Input.Phonenumber" class="font-weight-bold"></label>
            <input asp-for="Input.Phonenumber" class="form-control" type="text" placeholder="Phonenumber ..." />
            <span asp-validation-for="Input.Phonenumber" class="text-danger"></span>

        </div>
        @*<div class="form-group" align="center">

            <label asp-for="Input.UCN" class="font-weight-bold"></label>
            <input asp-for="Input.UCN" class="form-control" type="password" placeholder="ЕГН ..." />
            <span asp-validation-for="Input.UCN" class="text-danger"></span>
        </div>*@
        <hr class="mt-3 bg-eventures hr-2" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Регистрация</button>

        </div>

    </form>

</div>

<input type="button" class="btn btn-primary" value="Върни се назад" onclick="history.back(-1)" />





@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}